{
  "name": "corporate-energy-benchmark-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write src/",
    "screenshots": "tsx scripts/take-screenshots.ts",
    "screenshots:quick": "tsx scripts/quick-screenshots.ts",
    "demo": "tsx scripts/record-demo.ts",
    "docs": "node scripts/serve-docs.js",
    "docker:build": "docker build -t energybench-frontend .",
    "docker:run": "docker run -p 3000:80 energybench-frontend",
    "docker:dev": "docker-compose --profile development up",
    "docker:prod": "docker-compose up frontend"
  },
  "dependencies": {
    "@tanstack/vue-table": "^8.20.6",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.7.9",
    "chart.js": "^4.4.8",
    "lucide-vue-next": "^0.546.0",
    "pinia": "^2.2.8",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.31.0",
    "happy-dom": "^15.11.7",
    "playwright": "^1.56.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "~5.6.3",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.1.10"
  }
}
